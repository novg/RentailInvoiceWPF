<Window x:Class="RentailInvoiceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentailInvoiceWPF"
        mc:Ignorable="d"
        Title="RPA DTI Аренда" Height="450" Width="800">
    <DockPanel>
        <Label x:Name="LabelDrop" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Cursor="ScrollAll"
               AllowDrop="True" Drop="LabelDrop_Drop" FontSize="14">
            <DockPanel>
                <Image Source="Assets\folder.png" Width="24"/>
                <TextBlock x:Name="TextFilePath" Text="Перетащите каталог сюда" VerticalAlignment="Center" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
            </DockPanel>
        </Label>
    </DockPanel>
</Window>
